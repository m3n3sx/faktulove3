# FaktuLove Environment Configuration

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,app.ooxo.pl,faktulove.pl

# Database Configuration
DATABASE_URL=sqlite:///db.sqlite3
# For production use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/faktulove

# Email Configuration
EMAIL_HOST=mail.ooxo.pl
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@domain.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=your-email@domain.com

# GUS API
GUS_API_KEY=your-gus-api-key

# ============================================================================
# OCR AND AI CONFIGURATION
# ============================================================================

# Open Source OCR Configuration
USE_OPENSOURCE_OCR=True
DISABLE_GOOGLE_CLOUD=True
VALIDATE_OCR_CONFIG=True

# OCR Security Configuration
ENABLE_OCR_SECURITY=True
REQUIRE_OCR_ENCRYPTION=True
ENABLE_OCR_AUDIT_LOGGING=True

# OCR Service Configuration
OCR_SERVICE_URL=http://localhost:8001
OCR_TIMEOUT=30
OCR_MAX_RETRIES=3
OCR_MAX_FILE_SIZE=10485760
OCR_CLEANUP_HOURS=24

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# File Storage Configuration
MEDIA_ROOT=/workspace/media
MEDIA_URL=/media/

# OCR Processing Settings
OCR_AUTO_APPROVE_THRESHOLD=0.95
OCR_REVIEW_THRESHOLD=0.80
OCR_MAX_PROCESSING_TIME=300
OCR_CLEANUP_DAYS=30

# ============================================================================
# PADDLEOCR CONFIGURATION
# ============================================================================

# Core PaddleOCR Settings
PADDLEOCR_ENABLED=True
PADDLEOCR_PRIMARY=True
PADDLEOCR_USE_GPU=False
PADDLEOCR_MODEL_DIR=/app/paddle_models
PADDLEOCR_LANGUAGES=pl,en

# Model Configuration
PADDLEOCR_DET_MODEL=pl_PP-OCRv4_det
PADDLEOCR_REC_MODEL=pl_PP-OCRv4_rec
PADDLEOCR_CLS_MODEL=ch_ppocr_mobile_v2.0_cls
PADDLEOCR_MAX_TEXT_LENGTH=25000
PADDLEOCR_USE_ANGLE_CLS=True
PADDLEOCR_USE_SPACE_CHAR=True
PADDLEOCR_DROP_SCORE=0.5

# Performance Configuration
PADDLEOCR_MAX_MEMORY=800
PADDLEOCR_MAX_WORKERS=2
PADDLEOCR_BATCH_SIZE=1
PADDLEOCR_MAX_FILE_SIZE=52428800
PADDLEOCR_PARALLEL_PROCESSING=False
PADDLEOCR_CPU_THREADS=4
PADDLEOCR_ENABLE_MKLDNN=True

# Timeout Configuration
PADDLEOCR_TIMEOUT=30
PADDLEOCR_TIMEOUT_INIT=60.0
PADDLEOCR_TIMEOUT_PROCESSING=30.0
PADDLEOCR_TIMEOUT_MODEL_LOADING=120.0
PADDLEOCR_TIMEOUT_PREPROCESSING=15.0
PADDLEOCR_TIMEOUT_POSTPROCESSING=10.0
PADDLEOCR_TIMEOUT_STRATEGY=graceful
PADDLEOCR_TIMEOUT_DEGRADATION=True

# Preprocessing Configuration
PADDLEOCR_PREPROCESSING_ENABLED=True
PADDLEOCR_NOISE_REDUCTION=True
PADDLEOCR_CONTRAST_ENHANCEMENT=True
PADDLEOCR_SKEW_CORRECTION=True
PADDLEOCR_RESOLUTION_OPTIMIZATION=True
PADDLEOCR_ADAPTIVE_THRESHOLD=True
PADDLEOCR_MORPHOLOGICAL_OPS=True

# Polish Optimization Configuration
PADDLEOCR_POLISH_OPTIMIZATION=True
PADDLEOCR_NIP_VALIDATION=True
PADDLEOCR_DATE_ENHANCEMENT=True
PADDLEOCR_CURRENCY_PARSING=True
PADDLEOCR_SPATIAL_ANALYSIS=True
PADDLEOCR_CONFIDENCE_BOOSTING=True
PADDLEOCR_PATTERN_VALIDATION=True

# Error Handling and Fallback Configuration
PADDLEOCR_FALLBACK_ENABLED=True
PADDLEOCR_FALLBACK_STRATEGY=retry_then_fallback
PADDLEOCR_FALLBACK_MAX_RETRIES=2
PADDLEOCR_FALLBACK_RETRY_DELAY=1.0
PADDLEOCR_FALLBACK_ENGINES=tesseract,easyocr
PADDLEOCR_AUTO_FALLBACK_THRESHOLD=0.3
PADDLEOCR_MAX_RETRIES=2

# Memory Management Configuration
PADDLEOCR_MEMORY_MAX=800.0
PADDLEOCR_MEMORY_WARNING=600.0
PADDLEOCR_MEMORY_CRITICAL=750.0
PADDLEOCR_MEMORY_OPTIMIZATION=basic
PADDLEOCR_MEMORY_ALERTS=True
PADDLEOCR_MEMORY_CLEANUP_INTERVAL=300
PADDLEOCR_FORCE_GC=True

# Confidence Scoring Configuration
PADDLEOCR_CONFIDENCE_MIN=0.5
PADDLEOCR_CONFIDENCE_HIGH=0.8
PADDLEOCR_CONFIDENCE_POLISH_BOOST=0.1
PADDLEOCR_CONFIDENCE_VALIDATION_BOOST=0.15
PADDLEOCR_CONFIDENCE_SPATIAL_WEIGHT=0.2
PADDLEOCR_CONFIDENCE_PATTERN_WEIGHT=0.3

# Logging and Monitoring Configuration
PADDLEOCR_LOGGING_ENABLED=True
PADDLEOCR_LOGGING_LEVEL=INFO
PADDLEOCR_PERFORMANCE_LOGGING=True
PADDLEOCR_ERROR_LOGGING=True
PADDLEOCR_DEBUG_MODE=False

# Model Management Configuration
PADDLEOCR_AUTO_DOWNLOAD_MODELS=True
PADDLEOCR_MODEL_CACHE_SIZE=3
PADDLEOCR_MODEL_VALIDATION=True
PADDLEOCR_MODEL_UPDATE_CHECK=86400
PADDLEOCR_BACKUP_MODELS=True

# Feature Flags for PaddleOCR
USE_PADDLEOCR=True
PADDLEOCR_ENABLE_GPU=False
PADDLEOCR_ADVANCED_PREPROCESSING=True
PADDLEOCR_POLISH_ENHANCEMENT=True
PADDLEOCR_CONFIDENCE_BOOSTING=True
PADDLEOCR_SPATIAL_ANALYSIS=True
PADDLEOCR_FALLBACK_HANDLING=True
PADDLEOCR_PERFORMANCE_MONITORING=True
PADDLEOCR_MEMORY_OPTIMIZATION=True
PADDLEOCR_MODEL_CACHING=True
PADDLEOCR_BATCH_PROCESSING=False
PADDLEOCR_DEBUG_MODE=False

# ============================================================================
# PADDLEOCR PERFORMANCE TUNING
# ============================================================================

# Resource Allocation
PADDLEOCR_MAX_CONCURRENT_REQUESTS=3
PADDLEOCR_REQUEST_QUEUE_SIZE=10
PADDLEOCR_WORKER_POOL_SIZE=2

# Memory Optimization
PADDLEOCR_MEMORY_POOL_SIZE=512
PADDLEOCR_MEMORY_MAPPING=True
PADDLEOCR_GC_THRESHOLD=100

# Processing Optimization
PADDLEOCR_ENABLE_BATCH_PROCESSING=False
PADDLEOCR_BATCH_TIMEOUT=5
PADDLEOCR_MAX_BATCH_SIZE=5
PADDLEOCR_ASYNC_PROCESSING=True

# Model Optimization
PADDLEOCR_MODEL_WARMUP=True
PADDLEOCR_MODEL_PRELOAD=True
PADDLEOCR_MODEL_CACHE_TTL=3600
PADDLEOCR_MODEL_QUANTIZATION=False

# Image Processing Optimization
PADDLEOCR_MAX_IMAGE_DIMENSION=2048
PADDLEOCR_IMAGE_COMPRESSION_QUALITY=85
PADDLEOCR_IMAGE_CACHING=True
PADDLEOCR_IMAGE_CACHE_SIZE=100

# CPU Optimization
PADDLEOCR_CPU_OPTIMIZATION=medium
PADDLEOCR_CPU_AFFINITY=False
PADDLEOCR_CPU_CORES=auto

# I/O Optimization
PADDLEOCR_IO_OPTIMIZATION=True
PADDLEOCR_IO_BUFFER_SIZE=8192
PADDLEOCR_ASYNC_IO=True

# Monitoring and Profiling
PADDLEOCR_PERFORMANCE_PROFILING=False
PADDLEOCR_PROFILING_SAMPLE_RATE=0.1
PADDLEOCR_METRICS_COLLECTION=True
PADDLEOCR_METRICS_RETENTION=7

# Throttling Configuration
PADDLEOCR_THROTTLE_UPLOAD=8/min
PADDLEOCR_THROTTLE_PROCESS=15/min
PADDLEOCR_THROTTLE_BATCH=3/min
PADDLEOCR_THROTTLE_HEAVY=5/min

# Security Settings
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# FaktuLove Environment Configuration

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,app.ooxo.pl,faktulove.pl

# Database Configuration
DATABASE_URL=sqlite:///db.sqlite3
# For production use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/faktulove

# Email Configuration
EMAIL_HOST=mail.ooxo.pl
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@domain.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=your-email@domain.com

# GUS API
GUS_API_KEY=your-gus-api-key

# ============================================================================
# OCR AND AI CONFIGURATION
# ============================================================================

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=faktulove-ocr
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Document AI Configuration
DOCUMENT_AI_PROCESSOR_ID=your-processor-id

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# File Storage Configuration
MEDIA_ROOT=/workspace/media
MEDIA_URL=/media/

# OCR Processing Settings
OCR_AUTO_APPROVE_THRESHOLD=0.95
OCR_REVIEW_THRESHOLD=0.80
OCR_MAX_PROCESSING_TIME=300
OCR_CLEANUP_DAYS=30

# Security Settings
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
